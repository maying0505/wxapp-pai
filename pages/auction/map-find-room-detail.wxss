@import "../../template/drop-menu.wxss";
@import "../../template/drop-menu1.wxss";
@import "list.wxss";
page{
  height: 100%;
}
.map_find_room{
  height: 100%;
}
.map_find_room1{
  height: 75%;
}
.auction-list{
  top: 75%;
  position:absolute;
}
.search-bar {
  height: 50rpx;
  padding: 15rpx 20rpx;
  background: #fff;
  display: flex;
  position:fixed;
  z-index:2;
  width:100%;
}
.search {
  margin:0 35rpx 0 5rpx;
  display:flex;
  padding:10rpx 25rpx;
  border-radius:25rpx;
  align-items:center;
  background:#eee;
  height:30rpx;
  flex:1;
}

.search input {
  flex: 1;
  height: 30rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  width: 100%;
  outline: none;
}

.search-input-placeholder {
  color: #9b9b9b;
}

.search-append {
  display: flex;
  align-items: center;
  width: 30rpx;
  height: 30rpx;
}

.icon-search {
  font-size: 24rpx;
  color: #9b9b9b;
  margin-right: 10rpx;
}
.cur-addr image{
  width:22rpx;
  height:30rpx;
  vertical-align:middle;
}
.cur-addr text{
  font-size:24rpx;
  color:#fff;
  margin: 0 10rpx;
}

.cur-addr{
  display: flex;
  align-items:center;
  justify-content:center;
}

.address-box image {
  width: 24rpx;
  height: 14rpx;
}

.address-box .address-input {
  width: 130rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
}