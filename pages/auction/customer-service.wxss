
page {
  display: block;
  min-height: 100%;
  background-color: #F5F5F5;
}
.module_box{
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 15rpx;
}
.wen,.da{
  width:42rpx;
  height:42rpx;
  vertical-align:middle;
  margin: 0 20rpx;
}
.ask text{
  font-size: 30rpx;
}
.answer text{
  font-size: 24rpx;
  color:#8D8C8C;
}
.ask,.answer{
  margin: 15rpx 0;
}
.time{
  font-size: 24rpx;
  padding: 15rpx 20rpx;
  color:#8D8C8C;
}
.foot{
  background-color: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 2;
}

.foot .input-item{
  border-top: 1px solid #e5e5e5;
  padding: 15rpx;
  height:80rpx;
  font-size:24rpx;
  line-height:80rpx;
  flex: 6;
}
.foot input{
  height: 80rpx;
  line-height: 80rpx;
  outline: 0 none;
  color: #333;
}
.wen_btn{
  flex: 3;
}
.wen_btn button{
  background:linear-gradient(to right, #07c1ab, #3eb675);
  padding:0;
  margin:0;
  width:100%;
  height:100%;
  border-radius:0;
  color:#fff;
  display:flex;
  justify-content:center;
  align-items:center;
}
.form-box{
  display: flex;
  width: 100%;
}
.main{
  margin-bottom: 200rpx;
}
.foot_focus{
  /* top: 0; */
  /* bottom: inherit; */
}
.mask{
  position: fixed;
  background-color: #333;
  opacity: 0.5;
  z-index: 1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}