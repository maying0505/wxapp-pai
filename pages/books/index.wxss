page {
  min-height: 100%;
  background: #f0f0f0;
}

#bookList {
  height: 100%;
}

.auction-list {
  padding: 10rpx;
  min-height: 520rpx;
  position: relative;
}

.auction-item {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  min-height: 250rpx;
  flex-direction: column;
}

.auction-item-9 {
  min-height: 290rpx;
}

.auction-info {
  padding-left: 20rpx;
  padding-top: 5rpx;
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  min-height: 230rpx;
}

.bookcode {
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 0 0 10rpx 10rpx
}

.auction-image {
  position: relative;
  width: 280rpx;
  height: 230rpx;
  overflow: hidden;
}

.auction-image image {
  width: 100%;
  height: 100%;
}

.auction-detail {
  flex: 1;
  padding-left: 10rpx;
}

.auction-status {
  position: absolute;
  left: 0rpx;
  top: 6rpx;
  height: 30rpx;
  padding: 10rpx 10rpx 10rpx 30rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.9);
  border-radius: 0 27rpx 27rpx 0;
}

.auction-title {
  color: #323232;
  font-size: 30rpx;
  cursor: hand;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.auction-amount {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 10rpx;
  position: relative;
}

.txt {
  font-size: 24rpx;
  color: #666;
  width: 85rpx;
  text-align: left;
  line-height: 30rpx;
  margin-right: 30rpx;
}

.amount {
  font-size: 48rpx;
  color: #333;
  flex: 1;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.book-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 66rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  background: #fe7073;
  padding: 15rpx 0;
  text-align: center;
  color: #fff;
  border: 0 none;
}

.auction-time {
  font-size: 22rpx;
  color: #666;
}

.auction-status-18 {
  background-image: linear-gradient(to right, #7e7e7e, #4f4f4f);
}

.auction-status-9 {
  background-image: linear-gradient(to right, #62cc67, #25b28f);
}

.auction-status-8, .auction-status-10, .auction-status-14, .auction-status-15,
.auction-status-16, .auction-status-7 {
  background-image: linear-gradient(to right, #fb6f5b, #f94554);
}

.auction-status-11 {
  background-image: linear-gradient(to right, #ffb86c, #ff9a6d);
}

.auction-status-12 {
  background-image: linear-gradient(to right, #fb6f5b, #f94554);
}

.auction-status-13 {
  background-image: linear-gradient(to right, #44ccfe, #1ea5f2);
}



.hasMore {
  text-align: center;
  color: #03c2af;
  font-size: 30rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 10rpx 0;
  margin-bottom: 100rpx;
}

.bookcode {
  background: linear-gradient(to right, #3eb675, #07c1ab);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 0;
  font-size: 28rpx;
}

.bookcode image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.nodata{
  height: 50vh;
  background: #fff;
  text-align: center;
}
.nodata image{
  width: 331rpx;
  height: 184rpx;
  margin-top: 70rpx;
}
.nodata view{
  color: #666;
  font-size: 26rpx;
  margin-top: 20rpx;
}
