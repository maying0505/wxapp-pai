.popup-box {
  width: 100%;
  top: 0;
  left: 0;
  position: absolute;
  z-index: 102;
}

.filter .drop-menu-list {
  max-height: 1000rpx;
  overflow: scroll;
  /* padding-top: 80rpx; */
  box-shadow: 0 0 5px #cdcdcd;
  transition: height ease-in 0.3s;
}
.row-list{
  border-top: 1px solid #333;
}
.row-list, .distinct-list,.custom-list {
  z-index: 1000;
  background: #fff;
}

.row-list .row-item {
  display: flex;
  padding: 20rpx;
  font-size: 24rpx;
  position: relative;
}
.row-item-active .txt,.row-item-active .icon {color:#1abd98}

.row-list .row-item:before {
  content: '';
  position: absolute;
  z-index: 10005;
  background-color: #d9d9d9;
  transform-origin: 100% 50%;
  transform: scaleY(0.5) translateY(100%);
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
}

.row-list .row-item  .txt {
  flex: 1;
  height: 30rpx;
  line-height: 30rpx;
}

.row-list .row-item  .icon {
  width: 24rpx;
  height: 24rpx;
  color: #1abd98;
}

.row-list .row-item .row-item-choosen {
  color: #1abd98;
}

.distinct-list {
  display: flex;
  flex-direction: row;
  height: 500rpx;
  overflow: scroll;
}

.divider{
  width: 1px;
  height: 38rpx;
  display:inline-block;
  background:#d9d9d9;
  position:absolute;
  left:20rpx;
}

.status-filter-icon{
  width:24rpx;
  height:24rpx;
  position:absolute;
  right:10rpx;
  top:50%;
  transform:translateY(-50%);
}
